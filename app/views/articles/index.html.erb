<ul class="nav nav-tabs" role="tablist">
    <li class="active"><%= link_to 'Listing articles', articles_path %></li>
    <li><%= link_to 'New article', new_article_path %></li>
</ul>

<h1>Listing articles</h1>

<table class="table">
    <tr>
        <th>Title</th>
        <th>Text</th>
    </tr>

    <% @articles.each do |article| %>
      <tr>
          <td><%= article.title %></td>
          <td><%= article.text %></td>
          <td><%= link_to 'Show', article_path(article), class: 'btn btn-primary btn-xs' %></td>
          <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-info btn-xs' %></td>
          <td><%= link_to 'Destroy', article_path(article),
                          method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
</table>

<%= link_to new_article_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New article
<% end %>